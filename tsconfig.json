{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "declaration": false,
    "declarationMap": false,
    "sourceMap": false,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true, // remove once https://github.com/TooTallNate/node-speaker/pull/148 is merged
  },
  "include": [
    "src/**/*.ts",
    "pcm-volume.d.ts"
  ],
  "exclude": [
    "node_modules",
    "test"
  ],
  "paths": {
    "speaker": ["src/speaker.d.ts"]
  }
}
